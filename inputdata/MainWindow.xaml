<Window x:Class="inputdata.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:inputdata"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition>
            </ColumnDefinition>
            <ColumnDefinition Width="200">
            </ColumnDefinition>
         </Grid.ColumnDefinitions>
        <!--內容-->
            <Rectangle Grid.Column="1" Fill ="Gray"></Rectangle>
        <StackPanel Grid.Column="1" Margin="10">
            <Button Click="Button_Click_1" Margin="0,0,0,10" x:Name="btn_open" Background ="Transparent" BorderThickness="0">Open</Button>
            <Button Click="Button_Click" x:Name="btn_save">Save</Button>
        </StackPanel>
        <!--左邊為打字區-->
        <TextBox AcceptsReturn="True" TextWrapping="Wrap" x:Name="TextArea" TextChanged="TextArea_TextChanged">請打字</TextBox>
    </Grid>
</Window>
